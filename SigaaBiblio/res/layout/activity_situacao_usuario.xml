<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".SituacaoUsuarioActivity" >
    
    <LinearLayout
	    android:layout_width="match_parent"
	    android:layout_height="70dp"
	    android:background="@drawable/borda"
	    android:gravity="center"
	    android:orientation="horizontal">
        
        <TextView
            android:id="@+id/textViewTitleSituacao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/titleActivitySituacaoUsuario"
            android:textColor="@android:color/white"
            android:textSize="25dp" />
        
    </LinearLayout>
    
   

   <TextView
       android:id="@+id/textViewSituacaoUsuario1"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:text="Total de Empréstimos em Aberto: N"
       android:layout_margin="5dp"
       android:gravity="center"
       android:textSize="15dp"/>
	    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:orientation="horizontal"
        android:weightSum="1" >

        <TextView
            android:id="@+id/textViewBiblioteca"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.50"
            android:text="Biblioteca"
            android:textSize="15dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textViewBibliotecaSituacao"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.50"
            android:text="Central" />
    </LinearLayout>
	 
	<LinearLayout
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:layout_margin="5dp"
	    android:orientation="horizontal"
	    android:weightSum="1" >

	    <TextView
	        android:id="@+id/textViewDataEmprestimo"
	        android:layout_width="0dp"
	        android:layout_height="wrap_content"
	        android:layout_weight="0.50"
	        android:text="Data de Empréstimo"
	        android:textSize="15dp"
	        android:textStyle="bold" />

	    <TextView
	        android:id="@+id/textViewDataEmprestimoSituacao"
	        android:layout_width="0dp"
	        android:layout_height="wrap_content"
	        android:layout_weight="0.50"
	        android:text="15/03/2013" />
	</LinearLayout>

	<LinearLayout
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:layout_margin="5dp"
	    android:orientation="horizontal"
	    android:weightSum="1" >

	    <TextView
	        android:id="@+id/textViewDataRenovacao"
	        android:layout_width="0dp"
	        android:layout_height="wrap_content"
	        android:layout_weight="0.50"
	        android:text="Data de Renovação"
	        android:textSize="15dp"
	        android:textStyle="bold" />

	    <TextView
	        android:id="@+id/textViewDataRenovacaoSituacao"
	        android:layout_width="0dp"
	        android:layout_height="wrap_content"
	        android:layout_weight="0.50"
	        android:text="30/03/2013" />
	</LinearLayout>
    
	<LinearLayout
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:layout_margin="5dp"
	    android:orientation="horizontal"
	    android:weightSum="1" >

	    <TextView
	        android:id="@+id/textViewDataDevolucao"
	        android:layout_width="0dp"
	        android:layout_height="wrap_content"
	        android:layout_weight="0.50"
	        android:text="Data de Devolução"
	        android:textSize="15dp"
	        android:textStyle="bold" />

	    <TextView
	        android:id="@+id/textViewDataDevolucaoSituacao"
	        android:layout_width="0dp"
	        android:layout_height="wrap_content"
	        android:layout_weight="0.50"
	        android:text="15/04/2013" />
	</LinearLayout>
    
	<LinearLayout
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:layout_margin="5dp"
	    android:orientation="horizontal"
	    android:weightSum="1" >

	    <TextView
	        android:id="@+id/textViewIsRenovavel"
	        android:layout_width="0dp"
	        android:layout_height="wrap_content"
	        android:layout_weight="0.50"
	        android:text="Renovável"
	        android:textSize="15dp"
	        android:textStyle="bold" />

	    <ImageView
	        android:id="@+id/imageView1"
	        android:layout_width="30dp"
	        android:layout_height="30dp"
	        android:layout_weight="0.50"
	        android:src="@drawable/check" />
	</LinearLayout>

	<TextView
	    android:id="@+id/textView1"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:textSize="15dp"
	    android:textStyle="bold"
	    android:text="Informações do Livro: NOME; AUTOR" />

	<TextView
	    android:id="@+id/textView2"
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:gravity="center"
	    android:text="Pode Realizar Empréstimos: SIM"
	    android:textStyle="bold"
	    android:textSize="18dp" />
	
</LinearLayout>




