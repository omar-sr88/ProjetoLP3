<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#EFF3FA"
    android:weightSum="1" >
	 <!-- android:background="#2932aa"-->
	<LinearLayout
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:background="@drawable/background1"
	    android:gravity="center"
	    android:orientation="horizontal" >

	    <ImageView
	        android:id="@+id/imageView1"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:src="@drawable/brasao_ufpb" />

	    <TextView
	        android:id="@+id/textViewSituacaoUsuario1"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="@string/nomeSistema"
	        android:textColor="@android:color/white"
	        android:textSize="25dp" />
	</LinearLayout>

  	<ScrollView
  	    android:id="@+id/scrollView1"
  	    android:layout_width="match_parent"
  	    android:layout_height="wrap_content"
  	    android:layout_weight="0.80" >

	    <LinearLayout
	        android:layout_width="match_parent"
	        android:layout_height="298dp"
	        android:orientation="vertical"
	         >

	<TextView
	    android:id="@+id/textViewDataEmprestimo"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_gravity="center"
	    android:layout_margin="10dp"
	    android:text="Informe seu cadastro no SIGAA UFPB"
		android:gravity="center"
	    android:textSize="20dp"
	    android:background="#C4D2EB" />
	
	<LinearLayout
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:gravity="center" >

		<TextView
		    android:id="@+id/textViewDataRenovacao"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:text="Login: " 
		    android:textSize="20dp"
		    android:layout_margin="10dp"/>

		<EditText
		    android:id="@+id/dataFinalText"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:singleLine="true"
		    android:ems="10">
		</EditText>
	    
	</LinearLayout>
	
	<LinearLayout
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:gravity="center" >

		<TextView
		    android:id="@+id/textViewDataDevolucao"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:text="Senha:"
		    android:textSize="20dp"
		    android:layout_margin="7dp"
		     />

		<EditText
		    android:id="@+id/editText2"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_marginLeft="4dp"
		    android:ems="10"
		    android:singleLine="true"
		    android:inputType="textPassword" >

		    <requestFocus />
		</EditText>
	    
	</LinearLayout>

	<Button
	    android:id="@+id/consultarHistorico"
	    android:layout_width="230dp"
	    android:layout_height="wrap_content"
	    android:layout_gravity="center"
	    android:layout_marginTop="50dp"
	    android:text="Entrar" />
  </LinearLayout>
	</ScrollView>

  	<LinearLayout
  	    android:layout_width="match_parent"
  	    android:layout_height="wrap_content"
  	    android:layout_gravity="bottom"
  	    android:background="@drawable/background3"
  	    android:orientation="vertical"
  	    android:layout_weight="0.20" >

  	</LinearLayout>
  	    
</LinearLayout>