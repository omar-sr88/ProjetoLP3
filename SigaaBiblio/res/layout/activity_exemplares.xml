<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EFF3FA"
    android:orientation="vertical" >

    <!-- android:background="#2932aa" -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@drawable/background1"
        android:gravity="center"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/textViewExemplares"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/title_exemplares"
            android:textColor="@android:color/white"
            android:textSize="25dp" />
    </LinearLayout>

    <ViewFlipper
        android:id="@+id/viewFlipper3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:animationCache="true" >
    </ViewFlipper>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/retornarPesquisa"
            android:layout_width="103dp"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:text="Retornar a Pesquisa" />

        <Button
            android:id="@+id/retornarMenu"
            android:layout_width="103dp"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:text="Retornar ao Menu" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/background3"
        android:orientation="vertical" >
    </LinearLayout>
</LinearLayout>